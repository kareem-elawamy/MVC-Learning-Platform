@model ONE.Models.ApplicationUser
@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-5">
    <h2>Welcome, @Model.UserName</h2>

    <div class="card mt-3 p-3">
        <div class="row">
            <div class="col-md-4">
                @if (Model.PictureSource != null)
                {
                    <img src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.PictureSource))"
                         alt="Profile Picture" class="img-fluid rounded-circle" style="width: 150px; height: 150px;">
                }
                else
                {
                    <img src="https://via.placeholder.com/150" class="img-fluid rounded-circle" alt="Default Profile">
                }
            </div>

            <div class="col-md-8">
                <p><strong>Username:</strong> @Model.UserName</p>
                <p><strong>Email:</strong> @Model.Email</p>
                

                <a asp-controller="Account" asp-action="SiginOut" class="btn btn-danger">Logout</a>
                <a asp-controller="Favorite" asp-action="Index" class="btn btn-info text-white">Favorite</a>

            </div>
        </div>
    </div>
</div>