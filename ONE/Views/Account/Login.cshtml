@model ONE.DTOs.LoginDTOs
@{
    ViewData["Title"] = "Login";
    Layout = null; /* عشان مياخدش النافبار والفوتر بتوع الموقع */
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ONE Platform</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

    <style>
        /* CSS خاص بصفحة اللوجين */
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #0d6efd 0%, #0099ff 100%);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

        .login-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
            border: none;
            overflow: hidden;
            width: 100%;
            max-width: 450px;
            position: relative;
            z-index: 10;
        }

        .login-header {
            background: #f8f9fa;
            padding: 30px 20px;
            text-align: center;
            border-bottom: 1px solid #eee;
        }

        .form-control {
            height: 50px;
            border-radius: 0 10px 10px 0;
            border: 1px solid #e1e1e1;
            border-left: none;
            background-color: #fcfcfc;
        }

        .form-control:focus {
            box-shadow: none;
            border-color: #0d6efd;
            background-color: #fff;
        }

        .input-group-text {
            background: #fff;
            border: 1px solid #e1e1e1;
            border-right: none;
            border-radius: 10px 0 0 10px;
            color: #aaa;
            width: 45px;
            justify-content: center;
        }

        .input-group:focus-within .input-group-text {
            border-color: #0d6efd;
            color: #0d6efd;
        }

        .btn-login {
            height: 50px;
            border-radius: 25px;
            font-weight: 600;
            font-size: 1.1rem;
            background: linear-gradient(90deg, #0d6efd 0%, #0056b3 100%);
            border: none;
            transition: all 0.3s;
        }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(13, 110, 253, 0.4);
        }

        .toggle-password {
            cursor: pointer;
            border-radius: 0 10px 10px 0 !important;
            border-left: none;
        }

        /* أشكال ديكورية في الخلفية */
        .shape {
            position: absolute;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            animation: float 6s infinite ease-in-out;
        }

        .shape-1 {
            width: 200px;
            height: 200px;
            top: -50px;
            left: -50px;
        }

        .shape-2 {
            width: 300px;
            height: 300px;
            bottom: -100px;
            right: -100px;
            animation-delay: 2s;
        }

        @@keyframes float {

            0%,
            100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-20px);
            }
        }
    </style>
</head>

<body>

    <div class="shape shape-1"></div>
    <div class="shape shape-2"></div>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 d-flex justify-content-center">

                <div class="login-card">
                    <div class="login-header">
                        <div class="mb-3">
                            <i class="fas fa-graduation-cap fa-3x text-primary"></i>
                        </div>
                        <h4 class="fw-bold text-dark">Welcome Back!</h4>
                        <p class="text-muted small mb-0">Login to ONE Platform</p>
                    </div>

                    <div class="p-4 p-md-5">
                        <form asp-action="SaveLogin" method="post">
                            <div asp-validation-summary="ModelOnly"
                                class="alert alert-danger py-2 text-center small mb-3"></div>

                            <div class="mb-4">
                                <label asp-for="UserName"
                                    class="form-label fw-bold small text-muted text-uppercase">Username</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    <input asp-for="UserName" class="form-control" placeholder="Type your username" />
                                </div>
                                <span asp-validation-for="UserName" class="text-danger small mt-1 d-block"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Password"
                                    class="form-label fw-bold small text-muted text-uppercase">Password</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                    <input asp-for="Password" type="password" class="form-control" id="password"
                                        placeholder="Type your password"
                                        style="border-right: none; border-radius: 0;" />
                                    <button
                                        class="btn btn-outline-secondary border-light bg-white text-muted toggle-password"
                                        style="border: 1px solid #e1e1e1; border-left: none;" type="button"
                                        onclick="togglePassword()">
                                        <i class="fas fa-eye" id="toggleIcon"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
                            </div>

                            <div class="d-grid gap-2 mb-4">
                                <button type="submit" class="btn btn-primary btn-login">
                                    LOGIN <i class="fas fa-sign-in-alt ms-2"></i>
                                </button>
                            </div>

                            <div class="text-center">
                                <p class="text-muted small">Don't have an account?
                                    <a asp-action="Register" class="fw-bold text-decoration-none text-primary">Register
                                        Now</a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script
        src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <script>
        // دالة تبديل رؤية الباسورد
        function togglePassword() {
            var passwordInput = document.getElementById("password");
            var icon = document.getElementById("toggleIcon");

            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            } else {
                passwordInput.type = "password";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            }
        }
    </script>
</body>

</html>