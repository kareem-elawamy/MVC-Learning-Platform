@model IEnumerable<ONE.Models.Video>

<h2 class="mb-4 text-center">📹 Video List</h2>

<!-- ✅ Filter Videos -->
<form method="get" asp-action="Index" class="mb-4">
    <div class="row g-3 align-items-end">
        <div class="col-md-4">
            <label for="trackId" class="form-label fw-bold">🎯 Select Track:</label>
            <select id="trackId" name="trackId" class="form-select" asp-items="ViewBag.Tracks">
                <option value="">📌 All</option>
            </select>
        </div>

        <div class="col-md-4">
            <label for="materialId" class="form-label fw-bold">📚 Select Material:</label>
            <select id="materialId" name="materialId" class="form-select" asp-items="ViewBag.Materials">
                <option value="">📌 All</option>
            </select>
        </div>

        <div class="col-md-4 d-flex justify-content-center">
            <button type="submit" class="btn btn-primary px-4">🔍 Filter</button>
        </div>
        <div class="col-md-4 d-flex justify-content-center">
            <a asp-action="Create" class="btn btn-success px-4">📹 Add Video</a>
        </div>
    </div>
</form>

<!-- ✅ Video List Table -->
<table class="table table-striped table-bordered text-center align-middle">
    <thead class="table-dark">
        <tr>
            <th>📷 Thumbnail</th>
            <th>🎬 Title</th>
            <th>📝 Description</th>
            <th>📚 Material</th>
            <th>🎯 Track</th>
            <th>⚙️ Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var video in Model)
        {
            <tr>
                <td>
                    <a href="https://www.youtube.com/watch?v=@video.VideoId" target="_blank">
                        <img src="@video.ThumbnailUrl" alt="Video Thumbnail" class="img-thumbnail" width="120">
                    </a>
                </td>
                <td class="fw-bold">@video.Title</td>
                <td>@(video.Description.Length > 100 ? video.Description.Substring(0, 100) + "..." : video.Description)</td>
                <td>@video.Material?.Name</td>
                <td>@video.Material?.Track?.Name</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@video.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('⚠️ Are you sure you want to delete?');">
                            🗑️ Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    document.getElementById("trackId").addEventListener("change", function () {
        var trackId = this.value;
        var materialDropdown = document.getElementById("materialId");

        if (trackId) {
            fetch(`/Video/GetMaterialsByTrack?trackId=` + trackId)
                .then(response => response.json())
                .then(data => {
                    materialDropdown.innerHTML = '<option value="">📌 All</option>';
                    data.forEach(material => {
                        materialDropdown.innerHTML += `<option value="${material.id}">${material.name}</option>`;
                    });
                })
                .catch(error => console.error("Error fetching materials:", error));
        } else {
            materialDropdown.innerHTML = '<option value="">📌 All</option>';
        }
    });
</script>
