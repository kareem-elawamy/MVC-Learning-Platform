@model ONE.DTOs.TrackMaterialDTO

@{
    ViewData["Title"] = "Manage Content";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">

<style>
    /* تنسيق الكروت */
    .admin-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        border: none;
        height: 100%;
        transition: transform 0.2s;
    }
    
    .admin-card:hover {
        transform: translateY(-5px);
    }

    .card-header-custom {
        background: linear-gradient(45deg, #0d6efd, #0099ff);
        color: white;
        border-radius: 12px 12px 0 0 !important;
        padding: 15px;
        font-weight: 600;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    /* تنسيق الجدول */
    .table thead th {
        background-color: #f8f9fa;
        color: #6c757d;
        font-size: 0.85rem;
        text-transform: uppercase;
        border-bottom: 2px solid #e9ecef;
    }

    .table tbody td {
        vertical-align: middle;
        font-size: 0.95rem;
    }

    .btn-action {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
    }

    .badge-track {
        background-color: rgba(13, 110, 253, 0.1);
        color: #0d6efd;
        border: 1px solid rgba(13, 110, 253, 0.2);
    }
</style>

@Html.AntiForgeryToken()

<div class="container mt-5 mb-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold text-dark">🎛️ Content Management</h2>
        <p class="text-muted">Manage your learning tracks and subjects efficiently.</p>
    </div>

    <div class="row g-4">
        
        <div class="col-lg-6">
            <div class="admin-card">
                <div class="card-header-custom">
                    <span><i class="fas fa-layer-group me-2"></i> Tracks</span>
                    <button class="btn btn-light btn-sm text-primary fw-bold rounded-pill px-3" data-bs-toggle="modal" data-bs-target="#trackModal">
                        <i class="fas fa-plus me-1"></i> Add New
                    </button>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th class="ps-4">#</th>
                                    <th>Track Name</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var track in Model.Tracks)
                                {
                                    <tr>
                                        <td class="ps-4 fw-bold text-muted">@track.Id</td>
                                        <td class="fw-bold text-dark">@track.Name</td>
                                        <td class="text-center">
                                            <button class="btn btn-outline-danger btn-action btn-sm" onclick="deleteItem('Track', @track.Id)">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                                @if (!Model.Tracks.Any())
                                {
                                    <tr><td colspan="3" class="text-center py-4 text-muted">No tracks found.</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="admin-card">
                <div class="card-header-custom bg-success" style="background: linear-gradient(45deg, #198754, #20c997);">
                    <span><i class="fas fa-book me-2"></i> Materials</span>
                    <button class="btn btn-light btn-sm text-success fw-bold rounded-pill px-3" data-bs-toggle="modal" data-bs-target="#materialModal">
                        <i class="fas fa-plus me-1"></i> Add New
                    </button>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th class="ps-4">Name</th>
                                    <th>Track</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var material in Model.Materials)
                                {
                                    <tr>
                                        <td class="ps-4 fw-bold">@material.Name</td>
                                        <td>
                                            <span class="badge badge-track rounded-pill px-3 py-2">
                                                @material.Track.Name
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <button class="btn btn-outline-danger btn-action btn-sm" onclick="deleteItem('Material', @material.Id)">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                                @if (!Model.Materials.Any())
                                {
                                    <tr><td colspan="3" class="text-center py-4 text-muted">No materials found.</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="trackModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold">Add New Track</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="form-floating mb-3">
                    <input type="text" id="trackName" class="form-control" placeholder="Track Name">
                    <label>Track Name</label>
                </div>
            </div>
            <div class="modal-footer border-0 pt-0">
                <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary rounded-pill px-4" onclick="addTrack()">Save Track</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="materialModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold">Add New Material</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="form-floating mb-3">
                    <input type="text" id="materialName" class="form-control" placeholder="Material Name">
                    <label>Material Name</label>
                </div>
                <div class="form-floating">
                    <select id="trackIdSelect" class="form-select">
                        <option value="">Choose Track...</option>
                        @foreach (var track in Model.Tracks)
                        {
                            <option value="@track.Id">@track.Name</option>
                        }
                    </select>
                    <label>Assign to Track</label>
                </div>
            </div>
            <div class="modal-footer border-0 pt-0">
                <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success rounded-pill px-4" onclick="addMaterial()">Save Material</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // 1. Helper function to get Anti-Forgery Token
        function getToken() {
            return document.querySelector('input[name="__RequestVerificationToken"]').value;
        }

        // 2. Add Track Logic
        function addTrack() {
            let name = document.getElementById("trackName").value;
            
            if (!name) {
                Swal.fire('Error', 'Please enter track name', 'warning');
                return;
            }

            fetch("/Admin/AddTrack", {
                method: "POST",
                headers: { 
                    "Content-Type": "application/json",
                    "RequestVerificationToken": getToken() // إضافة التوكن للحماية
                },
                body: JSON.stringify({ Name: name })
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    Swal.fire('Success', 'Track added successfully', 'success')
                        .then(() => location.reload());
                } else {
                    Swal.fire('Error', 'Something went wrong', 'error');
                }
            });
        }

        // 3. Add Material Logic
        function addMaterial() {
            let name = document.getElementById("materialName").value;
            let trackId = document.getElementById("trackIdSelect").value; // غيرت الـ ID عشان ميتعارضش مع الجدول

            if (!name || !trackId) {
                Swal.fire('Error', 'Please fill all fields', 'warning');
                return;
            }

            fetch("/Admin/AddMaterial", {
                method: "POST",
                headers: { 
                    "Content-Type": "application/json",
                    "RequestVerificationToken": getToken() 
                },
                body: JSON.stringify({ Name: name, TrackId: trackId })
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    Swal.fire('Success', 'Material added successfully', 'success')
                        .then(() => location.reload());
                } else {
                    Swal.fire('Error', 'Something went wrong', 'error');
                }
            });
        }

        // 4. Universal Delete Function (Reusable)
        // دالة واحدة للمسح بنستخدمها للاتنين عشان منكررش كود
        function deleteItem(type, id) {
            Swal.fire({
                title: `Delete ${type}?`,
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    
                    // تحديد الرابط بناء على النوع
                    let url = type === 'Track' ? `/Admin/DeleteTrack/${id}` : `/Admin/DeleteMaterial/${id}`;

                    fetch(url, {
                        method: "DELETE",
                        headers: {
                            "RequestVerificationToken": getToken()
                        }
                    })
                    .then(res => res.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire('Deleted!', 'Record has been deleted.', 'success')
                                .then(() => location.reload());
                        } else {
                            Swal.fire('Error', 'Could not delete item.', 'error');
                        }
                    });
                }
            });
        }
    </script>
}