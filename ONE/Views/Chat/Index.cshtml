@{
    ViewData["Title"] = "Chat with Gemini AI";
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>

<div class="container chat-container">
    <div id="chat-box">
        <div id="messages"></div>
    </div>

    <div class="input-container">
        <input type="text" id="user-message" placeholder="Write your message here..." autofocus />
        <button onclick="sendMessage()">🚀 Send</button>
    </div>
</div>

<script>
    // 1. إنشاء الاتصال مع الـ Hub
    var connection = new signalR.HubConnectionBuilder().withUrl("/chatHub").build();

    // 2. استقبال الرسائل من السيرفر (سواء مني أو من البوت)
    connection.on("ReceiveMessage", function (sender, message) {
        appendMessage(sender, message);
    });

    // 3. بدء الاتصال
    connection.start().then(function () {
        console.log("✅ Connected to SignalR Hub");
        loadChatHistory(); // حمل الشات القديم بعد الاتصال
    }).catch(function (err) {
        return console.error(err.toString());
    });

    // إرسال الرسالة
    function sendMessage() {
        var userInput = document.getElementById("user-message").value.trim();
        if (!userInput) return;

        // اعرض رسالتي فوراً عندي
        appendMessage("user", userInput);

        // ابعت الرسالة للسيرفر (Hub)
        connection.invoke("SendMessage", userInput).catch(function (err) {
            return console.error(err.toString());
        });

        document.getElementById("user-message").value = "";
    }

    // دالة عرض الرسائل
    function appendMessage(sender, text) {
        let chatBox = document.getElementById("messages");
        let msgDiv = document.createElement("div");
        msgDiv.classList.add("message", sender === "user" ? "user-message" : "bot-message");

        // تحسين بسيط: لو بوت، ممكن نعمل تأثير كتابة أو أيقونة
        let icon = sender === "user" ? "🧑‍💻" : "🤖";
        msgDiv.innerHTML = `${icon} ${text}`;

        chatBox.appendChild(msgDiv);

        // انزل لتحت تلقائي
        // بنستخدم setTimeout عشان نضمن ان العنصر اترسم الاول
        setTimeout(() => {
            chatBox.scrollTop = chatBox.scrollHeight;
        }, 50);
    }

    // تحميل الرسائل القديمة (لسه شغالة بالـ API عادي)
    async function loadChatHistory() {
        try {
            let response = await fetch('/Chat/GetChatHistory', { cache: "no-store" });
            let messages = await response.json();

            // فضي الشات القديم
            document.getElementById("messages").innerHTML = "";

            messages.reverse().forEach(msg => {
                appendMessage("user", msg.userMessage);
                appendMessage("bot", msg.botResponse);
            });
        } catch (error) {
            console.error("Error loading history: ", error);
        }
    }

    // إرسال بالضغط على Enter
    document.getElementById("user-message").addEventListener("keypress", function (event) {
        if (event.key === "Enter") {
            sendMessage();
        }
    });
</script>

<style>
    /* نفس الستايل بتاعك بالظبط مغيرتش فيه عشان هو جميل */
    .chat-container {
        margin-top: 80px;
        max-width: 700px;
        background: white;
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        overflow: hidden;
    }

    #chat-box {
        height: 400px;
        overflow-y: auto;
        padding: 15px;
        background-color: #f0f0f0;
        display: flex;
        flex-direction: column;
        gap: 10px;
        scroll-behavior: smooth;
        /* إضافة نعومة في السكرول */
    }

    .message {
        max-width: 75%;
        padding: 12px 16px;
        border-radius: 20px;
        font-size: 16px;
        word-wrap: break-word;
        line-height: 1.5;
        animation: fadeIn 0.3s ease;
        /* انيميشن ظهور */
    }

    .user-message {
        background-color: #0d6efd;
        /* لون البوتستراب */
        color: white;
        align-self: flex-end;
        border-bottom-right-radius: 5px;
    }

    .bot-message {
        background-color: #e9ecef;
        color: black;
        align-self: flex-start;
        border-bottom-left-radius: 5px;
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
    }

    .input-container {
        display: flex;
        padding: 15px;
        background-color: white;
        border-top: 1px solid #ddd;
    }

    input {
        flex: 1;
        padding: 12px;
        border: 1px solid #ddd;
        border-radius: 25px;
        font-size: 16px;
        outline: none;
        background-color: #f8f8f8;
        transition: 0.3s;
    }

    input:focus {
        border-color: #0d6efd;
        background-color: #fff;
    }

    button {
        background-color: #0d6efd;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 25px;
        cursor: pointer;
        margin-left: 10px;
        font-size: 16px;
        font-weight: bold;
        transition: 0.3s;
    }

    button:hover {
        background-color: #0b5ed7;
        transform: translateY(-2px);
    }

    /* انيميشن بسيط للرسائل */
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* شكل السكرول بار */
    #chat-box::-webkit-scrollbar {
        width: 6px;
    }

    #chat-box::-webkit-scrollbar-thumb {
        background-color: #ccc;
        border-radius: 10px;
    }

    #chat-box::-webkit-scrollbar-track {
        background-color: #f0f0f0;
    }
</style>