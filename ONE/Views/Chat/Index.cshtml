@{
    ViewData["Title"] = "Chat with Gemini AI";
}

<div class="container chat-container">
    <div id="chat-box">
        <div id="messages"></div>
    </div>

    <div class="input-container">
        <input type="text" id="user-message" placeholder="Write your message here..." autofocus />
        <button onclick="sendMessage()">🚀 Send</button>
    </div>
</div>

<script>
    async function loadChatHistory() {
        let chatBox = document.getElementById("messages");

        try {
            let response = await fetch('/Chat/GetChatHistory', { cache: "no-store" });
            let messages = await response.json();

            chatBox.innerHTML = "";

            messages.reverse().forEach(msg => {
                appendMessage("user", msg.userMessage);
                appendMessage("bot", msg.botResponse);
            });

            chatBox.scrollTop = chatBox.scrollHeight;
        } catch (error) {
            console.error("Error loading messages: ", error);
        }
    }

    async function sendMessage() {
        let userInput = document.getElementById("user-message").value.trim();
        if (!userInput) return;

        appendMessage("user", userInput);

        try {
            let response = await fetch('/Chat/SendMessage', {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ UserMessage: userInput })
            });

            if (!response.ok) throw new Error("Error sending message");

            let data = await response.json();
            appendMessage("bot", data.Reply || "No response received");

        } catch (error) {
            appendMessage("bot", "⚠️ An error occurred while sending the message");
            console.error(error);
        }

        document.getElementById("user-message").value = "";
        document.getElementById("messages").scrollTop = document.getElementById("messages").scrollHeight;
    }

    function appendMessage(sender, text) {
        let chatBox = document.getElementById("messages");
        let msgDiv = document.createElement("div");
        msgDiv.classList.add("message", sender === "user" ? "user-message" : "bot-message");
        msgDiv.innerHTML = sender === "user" ? `🧑‍💻 ${text}` : `🤖 ${text}`;
        chatBox.appendChild(msgDiv);
        chatBox.scrollTop = chatBox.scrollHeight;
    }

    document.addEventListener("DOMContentLoaded", loadChatHistory);
</script>

<style>
    .chat-container {
        margin-top: 80px;
        max-width: 700px;
        background: white;
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        overflow: hidden;
    }

    #chat-box {
        height: 400px;
        overflow-y: auto;
        padding: 15px;
        background-color: #f0f0f0;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .message {
        max-width: 75%;
        padding: 12px 16px;
        border-radius: 20px;
        font-size: 16px;
        word-wrap: break-word;
    }

    .user-message {
        background-color: #007BFF;
        color: white;
        align-self: flex-end;
    }

    .bot-message {
        background-color: #e0e0e0;
        color: black;
        align-self: flex-start;
    }

    .input-container {
        display: flex;
        padding: 10px;
        background-color: white;
        border-top: 1px solid #ddd;
    }

    input {
        flex: 1;
        padding: 10px;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        outline: none;
        background-color: #f8f8f8;
    }

    button {
        background-color: #007BFF;
        color: white;
        border: none;
        padding: 10px 15px;
        border-radius: 5px;
        cursor: pointer;
        margin-left: 5px;
        font-size: 16px;
    }

        button:hover {
            background-color: #0056b3;
        }

    #chat-box::-webkit-scrollbar {
        width: 6px;
    }

    #chat-box::-webkit-scrollbar-thumb {
        background-color: #007BFF;
        border-radius: 10px;
    }
</style>
